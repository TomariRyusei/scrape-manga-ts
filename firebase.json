{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        ".cache"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "pubsub": {
      "port": 8087
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
